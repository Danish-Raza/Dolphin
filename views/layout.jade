doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='icon', href='../../../../favicon.ico')
    title Dolphin
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top.w3-black
     if user
        a.mr-2.w3-xlarge(onclick='w3_open()' style='text-decoration:none') â˜°  
     a.navbar-brand(href='#')
       img(src='/two.png', alt='logo')
     button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
     #navbarsExampleDefault.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
       if user
        li.nav-item.active
         a.nav-link(href='/')
          | Dashboard
          span.sr-only (current)
       if user     
        li.nav-item.active
         a.nav-link(href='/users/Admin')
          | My blogs
          span.sr-only (current)
        li.nav-item.active
         a.nav-link(href='/users/Add')
          | Add Post
          span.sr-only (current)
        li.nav-item.active
         a.nav-link(href='/users/blogs')
          | Blogs World
          span.sr-only (current)  
       if !user      
        li.nav-item.active
         a.nav-link(href='/users/register')
          | Registration
          span.sr-only (current)
        li.nav-item
         a.nav-link.active(href='/users/login')
          | Login
          span.sr-only (current)
      ul.nav.navbar-nav.navbar-right
        li.nav-item.active
         a.nav-link(href='/users/contact')
          | Contact Us
          span.sr-only (current)
        if user
         li.nav-item.active
          a.nav-link(href='/users/logout')
           | Logout
           span.sr-only (current)
    if user
     #mySidebar.w3-sidebar.w3-bar-block.w3-light-grey.w3-animate-left(style='width:250px;display:none;z-index:5')
       .w3-container.w3-black
         h4(style='color:black') Menu
       img(src='/#{user.profileimage}', alt='Snow', style='width:100%;height:220px')
       .w3-container.w3-center
         h2
           b #{user.name} 
       .w3-container
         p
          i.fa.fa-envelope.fa-fw.w3-margin-right.w3-large.w3-text-teal
          | #{user.email}
       .w3-bar-item.w3-button(href='#') About
       .w3-bar-item.w3-button(href='#') Contact
    #myOverlay.w3-overlay.w3-animate-opacity(onclick='w3_close()', style='cursor:pointer')  
    != messages()          
    block content
    footer.w3-container.w3-bottom.w3-theme.w3-margin-top.w3-black.w3-center
     h4 Copyrights &copy; 2018 All Rights Reserved by Dolphin Inc.  Developed By Danish Raza

  script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
  script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
  script.
    function w3_open() {
    document.getElementById("mySidebar").style.display = "block";
    document.getElementById("myOverlay").style.display = "block";
    }
    function w3_close() {
    document.getElementById("mySidebar").style.display = "none";
    document.getElementById("myOverlay").style.display = "none";
    }
  